@model TrainingModule.ViewModel.TrainingVM
@{ var title = "Create"; }
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Training.TrainingId" />
        @if (Model.Training != null)
        {
            //edit
            title = "Edit";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Training.Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Training.Title" class="form-control" />
                    <span asp-validation-for="Training.Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Training.Content"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Training.Content" class="form-control" />
                    <span asp-validation-for="Training.Content" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Training.MaterialId"></label>
                </div>
                <div class="form-group">
                    <label asp-for="MaterialList" class="control-label"></label>
                    <select asp-for="MaterialList" class="form-control" asp-items="@ViewBag.TrainingFormat"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.Training == null)
                    {
        <button type="submit" class="btn btn-primary form-control">Create</button> }
                    else
                    {
        <button type="submit" class="btn btn-primary form-control">Update</button>}
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}