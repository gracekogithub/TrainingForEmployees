@model IEnumerable<TrainingModule.Models.Training>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <form method="post" enctype="multipart/form-data" asp-controller="Materials" asp-action="Index">
                        <span>Select File:</span>
                        <input type="file" name="Files" multiple />
                        <input type="submit" value="Upload" />
                        <br />
                        <span style="color:green">@Html.Raw(ViewBag.Message)</span>
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TrainingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TrainingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TrainingId">Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>
