@model IEnumerable<TrainingModule.Models.Training>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="TrainingAction">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.UploadFile)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Message)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.ListBox ("Id", new selectList (item.Title, "Id","Message")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadFile)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ReviewerTrainings.Reviewers.Message)*@
           
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrainingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrainingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrainingId">Delete</a> |
                <a asp-action="Index" asp-route-id="@item.TrainingId">Comment</a>
            </td>
        </tr>
        }
    </tbody>
</table>
