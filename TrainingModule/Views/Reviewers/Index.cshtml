@model IEnumerable<TrainingModule.Models.Reviewer>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Comment is important! </h1>

<p>
    <a asp-action="AddOrUpdate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainings)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainings.Title)
            </td>
            <td>
                <a asp-action="AddOrUpdate" asp-route-id="@item.ReviewerId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ReviewerId">Delete(Manager)</a>
            </td>
        </tr>
}
    </tbody>
</table>
